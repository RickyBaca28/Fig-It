{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "strict": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "src/types/*"
            ]
        },
        "types": ["jest"],
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "__tests__"]
    }